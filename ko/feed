<script>
    const progress_mobile = document.getElementById("progress_mobile");
    const prev_mobile = document.getElementById("prev_mobile");
    const next_mobile = document.getElementById("next_mobile");
    const circle_mobiles_mobile = document.querySelectorAll(".circle_mobile");
    const target_mobile = document.getElementById("appImage_mobile");
   var description_mobile = document.getElementById("description_mobile");
  const myPictures_mobile = [
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-4.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-5.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-6.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-7.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-8.png"
        ];
  const headings_mobile = [
            "앱 다운로드하기",
            "등록하기",
            "플랫폼 탐험하기",
            "첫 거래 진행하기",
            "모니터링 & 조정하기"
      
        ];
        
  const description_mobiles = [
            "앱스토어 혹은 구글플레이에서 당사의 앱을 다운로드하세요.",
            "회원 등록을 하고, 가입을 위한 개인정보 및 관련 KYC 서류를 제출하면 끝입니다!",
            "로그인이 완료되면 앱을 탐험해보세요. 인터페이스와 차트 툴에 친숙해지고, 맞춤형 워치리스트를 설정해보세요.",
            "이제 첫 거래를 진행해보세요. 시장을 선택하고, 포지션을 선택하고, 클릭을 통해 트레이딩하세요. 정말 간단하죠?",
            "실시간 업데이트를 통해 본인의 트레이딩 및 시장을 모니터링하고, 필요시 포지션을 조정하세요."
      
        ];
    
    let currentActive_mobile = 1;
    let arrayIndex_mobile =0;
    next_mobile.addEventListener("click", ()=> {
        currentActive_mobile++;
         arrayIndex_mobile++;
        if (currentActive_mobile > circle_mobiles_mobile.length){
            currentActive_mobile=1;
            arrayIndex_mobile=0;
        }
        update_mobile();
      
        target_mobile.src = myPictures_mobile[arrayIndex_mobile];
        description_mobile.innerHTML=`<span> 0${currentActive_mobile} </span> <h3>${headings_mobile[arrayIndex_mobile]} </h3><p>${description_mobiles[arrayIndex_mobile]}</p>`;
          
      
    });
    
    prev_mobile.addEventListener("click", ()=> {
        currentActive_mobile--;
         arrayIndex_mobile--;
        if (currentActive_mobile < 1){
            currentActive_mobile=1;
               arrayIndex_mobile=0;
        }
         update_mobile();
         
      target_mobile.src = myPictures_mobile[arrayIndex_mobile];
        description_mobile.innerHTML=`<span> 0${currentActive_mobile} </span> <h3>${headings_mobile[arrayIndex_mobile]} </h3><p>${description_mobiles[arrayIndex_mobile]}</p>`;
    });
    
        
           
      
           
        
    circle_mobiles_mobile[0].onclick = () => {
        currentActive_mobile = 1;
    arrayIndex_mobile =0;
    target_mobile.src = myPictures_mobile[0];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML=`<span> 01 </span> <h3>${headings_mobile[0]} </h3><p>${description_mobiles[0]}</p>`;
    circle_mobiles_mobile[0].classList.add("active_mobile");
    
    for (let counter_mobile = 1; counter_mobile <= 4; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.remove("active_mobile");
    }
  
    }

    circle_mobiles_mobile[1].onclick = () => {
        currentActive_mobile = 2;
    arrayIndex_mobile =1;
    target_mobile.src = myPictures_mobile[1];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML=`<span> 02 </span> <h3>${headings_mobile[1]} </h3><p>${description_mobiles[1]}</p>`;
    circle_mobiles_mobile[0].classList.add("active_mobile");
    circle_mobiles_mobile[1].classList.add("active_mobile");
    for (let counter_mobile = 2; counter_mobile <= 4; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.remove("active_mobile");
    }

    }

    circle_mobiles_mobile[2].onclick = () => {
        currentActive_mobile = 3;
    arrayIndex_mobile =2;
    target_mobile.src = myPictures_mobile[2];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML=`<span> 03 </span> <h3>${headings_mobile[2]} </h3><p>${description_mobiles[2]}</p>`;
    
        for (let counter_mobile = 0; counter_mobile <= 2; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.add("active_mobile");
    }
    for (let counter_mobile = 3; counter_mobile <= 4; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.remove("active_mobile");
    }

    }

    circle_mobiles_mobile[3].onclick = () => {
        currentActive_mobile = 4;
    arrayIndex_mobile =3;
    target_mobile.src = myPictures_mobile[3];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML=`<span> 04 </span> <h3>${headings_mobile[3]} </h3><p>${description_mobiles[3]}</p>`;
    for (let counter_mobile = 0; counter_mobile <= 3; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.add("active_mobile");
    }
     
    circle_mobiles_mobile[4].classList.remove("active_mobile");


    }

    circle_mobiles_mobile[4].onclick = () => {
        currentActive_mobile = 5;
    arrayIndex_mobile =4;
    target_mobile.src = myPictures_mobile[4];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML=`<span> 05 </span> <h3>${headings_mobile[4]} </h3><p>${description_mobiles[4]}</p>`;
        for (let counter_mobile = 0; counter_mobile <= 4; counter_mobile++) {
    circle_mobiles_mobile[counter_mobile].classList.add("active_mobile");
    }

    }


    
    function update_mobile() {
        circle_mobiles_mobile.forEach((circle_mobile, idx)=>{
            if(idx < currentActive_mobile){
                circle_mobile.classList.add("active_mobile");
                
            } else {
                circle_mobile.classList.remove("active_mobile");
            }
        })
    }
    
</script>
