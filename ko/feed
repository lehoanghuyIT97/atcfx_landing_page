    target_mobile.src = myPictures_mobile[2];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML = `<span> 03  </span> <h3>${headings_mobile[2]} </h3><p>${description_mobiles[2]}</p>`;

                  circle_mobiles_mobile[0].classList.add("active_mobile");
                  circle_mobiles_mobile[1].classList.add("active_mobile");
                  circle_mobiles_mobile[2].classList.add("active_mobile");
                     
