                 }
    



function update_mobile() {
    circle_mobiles_mobile.forEach((circle_mobile, idx) => {
        if (idx < currentActive_mobile) {
            circle_mobile.classList.add("active_mobile");

        } else {
            circle_mobile.classList.remove("active_mobile");
        }
    })
}
</script>
