<script>
const progress_mobile = document.getElementById("progress_mobile");
const prev_mobile = document.getElementById("prev_mobile");
const next_mobile = document.getElementById("next_mobile");
const circle_mobiles_mobile = document.querySelectorAll(".circle_mobile");
const target_mobile = document.getElementById("appImage_mobile");
var description_mobile = document.getElementById("description_mobile");
var countEmpty_mobile  = 0;
const myPictures_mobile = [];
const headings_mobile = [];
const description_mobiles = [];

                            myPictures_mobile.push("https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-4.png");
                headings_mobile.push("앱 다운로드하기");
                description_mobiles.push("<p>앱스토어 혹은 구글플레이에서 당사의 앱을 다운로드하세요.</p>");
                            myPictures_mobile.push("https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-5.png");
                headings_mobile.push("등록하기");
                description_mobiles.push("<p>회원 등록을 하고, 가입을 위한 개인정보 및 관련 KYC 서류를 제출하면 끝입니다!</p>");
                            myPictures_mobile.push("https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-6.png");
                headings_mobile.push("플랫폼 탐험하기");
                description_mobiles.push("<p>로그인이 완료되면 앱을 탐험해보세요. 인터페이스와 차트 툴에 친숙해지고, 맞춤형 워치리스트를 설정해보세요.</p>");
                            myPictures_mobile.push("https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-7.png");
                headings_mobile.push("첫 거래 진행하기");
                description_mobiles.push("<p>이제 첫 거래를 진행해보세요. 시장을 선택하고, 포지션을 선택하고, 클릭을 통해 트레이딩하세요. 정말 간단하죠?</p>");
                            myPictures_mobile.push("https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-8.png");
                headings_mobile.push("모니터링 & 조정하기");
                description_mobiles.push("<p>실시간 업데이트를 통해 본인의 트레이딩 및 시장을 모니터링하고, 필요시 포지션을 조정하세요.</p>");
                            myPictures_mobile.push("");
                headings_mobile.push("");
                description_mobiles.push("");
            


circle_mobiles_mobile.forEach(checkEmpty_mobile);

function checkEmpty_mobile(a_mobile){
    let ImageSrc_mobile= a_mobile.getAttribute('src');
          if(ImageSrc_mobile===""){
          
            countEmpty_mobile++;
              return true;
          } else {
              return false;
          }
      }

let currentActive_mobile = 1;
let arrayIndex_mobile = 0;
next_mobile.addEventListener("click", () => {
    currentActive_mobile++;
    arrayIndex_mobile++;
      
    if ( countEmpty_mobile===1 ){
        if (currentActive_mobile === circle_mobiles_mobile.length) {
        currentActive_mobile = 1;
        arrayIndex_mobile = 0;
        }
    } else if( countEmpty_mobile===2 ) {
        if (currentActive_mobile  === (circle_mobiles_mobile.length -1)) {
         currentActive_mobile = 1;
        arrayIndex_mobile = 0;
        }
    } else {
   
        if (currentActive_mobile > circle_mobiles_mobile.length) {
        currentActive_mobile = 1;
        arrayIndex_mobile = 0;
        }
   }

   
    update_mobile();

    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML =
        `<span> 0${currentActive_mobile} </span> <h3>${headings_mobile[arrayIndex_mobile]} </h3><p>${description_mobiles[arrayIndex_mobile]}</p>`;


});

prev_mobile.addEventListener("click", () => {
    currentActive_mobile--;
    arrayIndex_mobile--;
    if (currentActive_mobile < 1) {
        currentActive_mobile = 1;
        arrayIndex_mobile = 0;
    }
    update_mobile();

    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML =
        `<span> 0${currentActive_mobile} </span> <h3>${headings_mobile[arrayIndex_mobile]} </h3><p>${description_mobiles[arrayIndex_mobile]}</p>`;
});



      circle_mobiles_mobile[0].onclick = () => {
    currentActive_mobile = 1;
    arrayIndex_mobile = 0;
    target_mobile.src = myPictures_mobile[0];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML = `<span> 01  </span> <h3>${headings_mobile[0]} </h3><p>${description_mobiles[0]}</p>`;

                  circle_mobiles_mobile[0].classList.add("active_mobile");
                     
        circle_mobiles_mobile[1].classList.remove("active_mobile");
   
             
        circle_mobiles_mobile[2].classList.remove("active_mobile");
   
             
        circle_mobiles_mobile[3].classList.remove("active_mobile");
   
             
        circle_mobiles_mobile[4].classList.remove("active_mobile");
   
             
        circle_mobiles_mobile[5].classList.remove("active_mobile");
   
         }
      circle_mobiles_mobile[1].onclick = () => {
    currentActive_mobile = 2;
    arrayIndex_mobile = 1;
    target_mobile.src = myPictures_mobile[1];
    target_mobile.src = myPictures_mobile[arrayIndex_mobile];
    description_mobile.innerHTML = `<span> 02  </span> <h3>${headings_mobile[1]} </h3><p>${description_mobiles[1]}</p>`;

                  circle_mobiles_mobile[0].classList.add("active_mobile");
                  circle_mobiles_mobile[1].classList.add("active_mobile");
                     
