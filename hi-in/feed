<script>
    const progress = document.getElementById("progress");
    const prev = document.getElementById("prev");
    const next = document.getElementById("next");
    const circles = document.querySelectorAll(".circle");
    const target = document.getElementById("appImage");
   var description = document.getElementById("description");
  const myPictures = [
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-4.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-5.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-6.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-7.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-8.png"
        ];
  const headings = [
            "ऐप डाउनलोड करें",
            "साइन अप करें",
            "प्लेटफ़ॉर्म की छानबीन करें",
            "अपना पहला ट्रेड करें",
            "मॉनीटर कर एडजस्ट करें"
      
        ];
        
  const descriptions = [
            "ऐप स्टोर या Google Play से हमारा ऐप डाउनलोड करें।",
            "साइन अप कर, अपना विवरण और संबंधित KYC डॉक्&#x200d;यूमेंट सबमिट करने पर आप इसमें शामिल होंगे!",
            "साइन इन करने पर, ऐप की छानबीन करें, इंटरफ़ेस, चार्टिंग टूल की जानकारी पाकर अपनी व्यक्तिगत वॉचलिस्ट सेट करें।",
            "आइए अब आपका पहला ट्रेड करें, अपना मार्केट चुनें, अपनी पोजीशन चुनकर ट्रेड के लिए टैप करें - यह बिल्&#x200d;कुल आसान है!",
            "ज़रूरत अनुसार पोजीशनें एडजस्ट करने के लिए अपने ट्रेड और मार्केट रीयल-टाइम अपडेट से मॉनिटर करें।"
      
        ];
    
    let currentActive = 1;
    let arrayIndex =0;
    next.addEventListener("click", ()=> {
        currentActive++;
         arrayIndex++;
        if (currentActive > circles.length){
            currentActive=1;
            arrayIndex=0;
        }
        update_tablet();
      
        target.src = myPictures[arrayIndex];
        description.innerHTML=`<span> 0${currentActive} </span> <h3>${headings[arrayIndex]} </h3><p>${descriptions[arrayIndex]}</p>`;
          
      
    });
    
    prev.addEventListener("click", ()=> {
        currentActive--;
         arrayIndex--;
        if (currentActive < 1){
            currentActive=1;
               arrayIndex=0;
        }
        update_tablet();
      target.src = myPictures[arrayIndex];
        description.innerHTML=`<p> 0${currentActive} </p> <h2>${headings[arrayIndex]} </h2><p>${descriptions[arrayIndex]}</p>`;
    });
    
    
    circles[0].onclick = () => {
        currentActive = 1;
        arrayIndex = 0;
        target.src = myPictures[0];
        target.src = myPictures[arrayIndex];
        description.innerHTML = `<p> 01 </p> <h2>${headings[0]} </h2><p>${descriptions[0]}</p>`;
        circles[0].classList.add("active");
        for (let counter = 1; counter <= 4; counter++) {
            circles[counter].classList.remove("active");
        }

    }

    circles[1].onclick = () => {
        currentActive = 2;
        arrayIndex = 1;
        target.src = myPictures[1];
        target.src = myPictures[arrayIndex];
        description.innerHTML = `<p> 02 </p> <h2>${headings[1]} </h2><p>${descriptions[1]}</p>`;
        circles[0].classList.add("active");
        circles[1].classList.add("active");
        for (let counter = 2; counter <= 4; counter++) {
            circles[counter].classList.remove("active");
        }

    }

    circles[2].onclick = () => {
        currentActive = 3;
        arrayIndex = 2;
        target.src = myPictures[2];
        target.src = myPictures[arrayIndex];
        description.innerHTML = `<p> 03 </p> <h2>${headings[2]} </h2><p>${descriptions[2]}</p>`;

        for (let counter = 0; counter <= 2; counter++) {
            circles[counter].classList.add("active");
        }
        for (let counter = 3; counter <= 4; counter++) {
            circles[counter].classList.remove("active");
        }

    }

    circles[3].onclick = () => {
        currentActive = 4;
        arrayIndex = 3;
        target.src = myPictures[3];
        target.src = myPictures[arrayIndex];
        description.innerHTML = `<p> 04 </p> <h2>${headings[3]} </h2><p>${descriptions[3]}</p>`;
        for (let counter = 0; counter <= 3; counter++) {
            circles[counter].classList.add("active");
        }
        circles[4].classList.remove("active");


    }

    circles[4].onclick = () => {
        currentActive = 5;
        arrayIndex = 4;
        target.src = myPictures[4];
        target.src = myPictures[arrayIndex];
        description.innerHTML = `<p> 05 </p> <h2>${headings[4]} </h2><p>${descriptions[4]}</p>`;
        for (let counter = 0; counter <= 4; counter++) {
            circles[counter].classList.add("active");
        }

    }

    
    function update_tablet() {
        circles.forEach((circle, idx)=>{
            if(idx < currentActive){
                circle.classList.add("active");
                
            } else {
                circle.classList.remove("active");
            }
        })
    }
    
</script>
		</div>
				</div>
					</div>
		</div>
					</div>
