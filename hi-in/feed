let currentActive = 1;
let arrayIndex = 0;

circles.forEach(checkEmpty_tablet);

function checkEmpty_tablet(a_tablet){
    let ImageSrc_tablet= a_tablet.getAttribute('src');
          if(ImageSrc_tablet===""){
          
            countEmpty_tablet++;
              return true;
          } else {
              return false;
          }
      }
      
  

next.addEventListener("click", () => {
    currentActive++;
    arrayIndex++;

      
    if ( countEmpty_tablet===1 ){
        if (currentActive === circles.length) {
        currentActive = 1;
        arrayIndex = 0;
        }
    } else if( countEmpty_tablet===2 ) {
   
        if (currentActive  === (circles.length -1)) {
         currentActive = 1;
        arrayIndex = 0;
        }
    } else {
   
        if (currentActive > circles.length) {
        currentActive = 1;
        arrayIndex = 0;
    }
   }

    update_tablet();

    target.src = myPictures[arrayIndex];
    description.innerHTML =
        `<span> 0${currentActive} </span> <h3>${headings[arrayIndex]} </h3><p>${descriptions[arrayIndex]}</p>`;


});

prev.addEventListener("click", () => {
    currentActive--;
    arrayIndex--;
    if (currentActive < 1) {
        currentActive = 1;
        arrayIndex = 0;
    }
    update_tablet();
    target.src = myPictures[arrayIndex];
    description.innerHTML =
        `<span> 0${currentActive} </span> <h3>${headings[arrayIndex]} </h3><p>${descriptions[arrayIndex]}</p>`;
});



