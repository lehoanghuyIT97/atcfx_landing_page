<script>
    const progress_desktop = document.getElementById("progress_desktop");
    const prev_desktop = document.getElementById("prev_desktop");
    const next_desktop = document.getElementById("next_desktop");
    const circle_desktops_desktop = document.querySelectorAll(".circle_desktop");
    const click_steps_desktop = document.querySelectorAll(".click_steps_desktop");
    const target_desktop = document.getElementById("appImage_desktop");
   var description_desktop = document.getElementById("description_desktop");
  const myPictures_desktop = [
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-4.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-5.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-6.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-7.png",
            "https://www.atfx.com/wp-content/uploads/2025/04/Desktop-Img-8.png"
        ];
  const headings_desktop = [
            "ऐप डाउनलोड करें",
            "साइन अप करें",
            "प्लेटफ़ॉर्म की छानबीन करें",
            "अपना पहला ट्रेड करें",
            "मॉनीटर कर एडजस्ट करें"
      
        ];
        
  const description_desktops = [
            "ऐप स्टोर या Google Play से हमारा ऐप डाउनलोड करें।",
            "साइन अप कर, अपना विवरण और संबंधित KYC डॉक्&#x200d;यूमेंट सबमिट करने पर आप इसमें शामिल होंगे!",
            "साइन इन करने पर, ऐप की छानबीन करें, इंटरफ़ेस, चार्टिंग टूल की जानकारी पाकर अपनी व्यक्तिगत वॉचलिस्ट सेट करें।",
            "आइए अब आपका पहला ट्रेड करें, अपना मार्केट चुनें, अपनी पोजीशन चुनकर ट्रेड के लिए टैप करें - यह बिल्&#x200d;कुल आसान है!",
            "ज़रूरत अनुसार पोजीशनें एडजस्ट करने के लिए अपने ट्रेड और मार्केट रीयल-टाइम अपडेट से मॉनिटर करें।"
      
        ];
    
    let currentActive_desktop = 1;
    let arrayIndex_desktop =0;
    next_desktop.addEventListener("click", ()=> {
        currentActive_desktop++;
         arrayIndex_desktop++;
        if (currentActive_desktop > circle_desktops_desktop.length){
            currentActive_desktop=1;
            arrayIndex_desktop=0;
        }
        update();
      
        target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<span> 0${currentActive_desktop} </span> <h3>${headings_desktop[arrayIndex_desktop]} </h3><p>${description_desktops[arrayIndex_desktop]}</p>`;
          
      
    });
    
    prev_desktop.addEventListener("click", ()=> {
        currentActive_desktop--;
         arrayIndex_desktop--;
        if (currentActive_desktop < 1){
            currentActive_desktop=1;
               arrayIndex_desktop=0;
        }
        update();
      target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 0${currentActive_desktop} </p> <h2>${headings_desktop[arrayIndex_desktop]} </h2><p>${description_desktops[arrayIndex_desktop]}</p>`;
    });
      
    
    
    
   click_steps_desktop[0].onclick = () => {
          currentActive_desktop = 1;
     arrayIndex_desktop =0;
        target_desktop.src = myPictures_desktop[0];
         target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 01 </p> <h2>${headings_desktop[0]} </h2><p>${description_desktops[0]}</p>`;
         circle_desktops_desktop[0].classList.add("active");
      for (let counter = 1; counter <= 4; counter++) {
        circle_desktops_desktop[counter].classList.remove("active");
     }
  
   }
    
    click_steps_desktop[1].onclick = () => {
          currentActive_desktop = 2;
     arrayIndex_desktop =1;
        target_desktop.src = myPictures_desktop[1];
         target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 02 </p> <h2>${headings_desktop[1]} </h2><p>${description_desktops[1]}</p>`;
        circle_desktops_desktop[0].classList.add("active");
         circle_desktops_desktop[1].classList.add("active");
      for (let counter = 2; counter <= 4; counter++) {
        circle_desktops_desktop[counter].classList.remove("active");
     }
  
   }
   
    click_steps_desktop[2].onclick = () => {
          currentActive_desktop = 3;
     arrayIndex_desktop =2;
        target_desktop.src = myPictures_desktop[2];
         target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 03 </p> <h2>${headings_desktop[2]} </h2><p>${description_desktops[2]}</p>`;
        
             for (let counter = 0; counter <= 2; counter++) {
      circle_desktops_desktop[counter].classList.add("active");
     }
      for (let counter = 3; counter <= 4; counter++) {
        circle_desktops_desktop[counter].classList.remove("active");
     }
  
   }
   
    click_steps_desktop[3].onclick = () => {
          currentActive_desktop = 4;
     arrayIndex_desktop =3;
        target_desktop.src = myPictures_desktop[3];
         target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 04 </p> <h2>${headings_desktop[3]} </h2><p>${description_desktops[3]}</p>`;
  for (let counter = 0; counter <= 3; counter++) {
      circle_desktops_desktop[counter].classList.add("active");
     }
        circle_desktops_desktop[4].classList.remove("active");
     
  
   }
   
    click_steps_desktop[4].onclick = () => {
          currentActive_desktop = 5;
     arrayIndex_desktop =4;
        target_desktop.src = myPictures_desktop[4];
         target_desktop.src = myPictures_desktop[arrayIndex_desktop];
        description_desktop.innerHTML=`<p> 05 </p> <h2>${headings_desktop[4]} </h2><p>${description_desktops[4]}</p>`;
          for (let counter = 0; counter <= 4; counter++) {
      circle_desktops_desktop[counter].classList.add("active");
     }
  
   }
  
    function update() {
        circle_desktops_desktop.forEach((circle_desktop, idx)=>{
            if(idx < currentActive_desktop){
                circle_desktop.classList.add("active");
                
            } else {
                circle_desktop.classList.remove("active");
            }
        })
    }
  
</script>
		</div>
