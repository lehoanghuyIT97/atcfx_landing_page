    target_desktop.src = myPictures_desktop[1];
    target_desktop.src = myPictures_desktop[arrayIndex_desktop];
    description_desktop.innerHTML = `<span> 02  </span> <h3>${headings_desktop[1]} </h3><p>${description_desktops[1]}</p>`;

                  circle_desktops_desktop[0].classList.add("active");
                  circle_desktops_desktop[1].classList.add("active");
                     
        circle_desktops_desktop[2].classList.remove("active");
   
             
        circle_desktops_desktop[3].classList.remove("active");
   
             
        circle_desktops_desktop[4].classList.remove("active");
   
             
        circle_desktops_desktop[5].classList.remove("active");
   
         }
    click_steps_desktop[2].onclick = () => {
    currentActive_desktop = 3;
    arrayIndex_desktop = 2;
    target_desktop.src = myPictures_desktop[2];
    target_desktop.src = myPictures_desktop[arrayIndex_desktop];
    description_desktop.innerHTML = `<span> 03  </span> <h3>${headings_desktop[2]} </h3><p>${description_desktops[2]}</p>`;

                  circle_desktops_desktop[0].classList.add("active");
                  circle_desktops_desktop[1].classList.add("active");
                  circle_desktops_desktop[2].classList.add("active");
                     
        circle_desktops_desktop[3].classList.remove("active");
   
             
        circle_desktops_desktop[4].classList.remove("active");
   
             
        circle_desktops_desktop[5].classList.remove("active");
   
         }
    click_steps_desktop[3].onclick = () => {
    currentActive_desktop = 4;
    arrayIndex_desktop = 3;
    target_desktop.src = myPictures_desktop[3];
    target_desktop.src = myPictures_desktop[arrayIndex_desktop];
    description_desktop.innerHTML = `<span> 04  </span> <h3>${headings_desktop[3]} </h3><p>${description_desktops[3]}</p>`;

                  circle_desktops_desktop[0].classList.add("active");
                  circle_desktops_desktop[1].classList.add("active");
                  circle_desktops_desktop[2].classList.add("active");
                  circle_desktops_desktop[3].classList.add("active");
                     
        circle_desktops_desktop[4].classList.remove("active");
   
             
        circle_desktops_desktop[5].classList.remove("active");
   
         }
    click_steps_desktop[4].onclick = () => {
    currentActive_desktop = 5;
    arrayIndex_desktop = 4;
    target_desktop.src = myPictures_desktop[4];
    target_desktop.src = myPictures_desktop[arrayIndex_desktop];
    description_desktop.innerHTML = `<span> 05  </span> <h3>${headings_desktop[4]} </h3><p>${description_desktops[4]}</p>`;

                  circle_desktops_desktop[0].classList.add("active");
                  circle_desktops_desktop[1].classList.add("active");
                  circle_desktops_desktop[2].classList.add("active");
                  circle_desktops_desktop[3].classList.add("active");
                  circle_desktops_desktop[4].classList.add("active");
                     
        circle_desktops_desktop[5].classList.remove("active");
   
         }
    click_steps_desktop[5].onclick = () => {
    currentActive_desktop = 6;
    arrayIndex_desktop = 5;
    target_desktop.src = myPictures_desktop[5];
    target_desktop.src = myPictures_desktop[arrayIndex_desktop];
    description_desktop.innerHTML = `<span> 06  </span> <h3>${headings_desktop[5]} </h3><p>${description_desktops[5]}</p>`;

                  circle_desktops_desktop[0].classList.add("active");
                  circle_desktops_desktop[1].classList.add("active");
                  circle_desktops_desktop[2].classList.add("active");
                  circle_desktops_desktop[3].classList.add("active");
                  circle_desktops_desktop[4].classList.add("active");
                  circle_desktops_desktop[5].classList.add("active");
                 }
    

function update() {
    circle_desktops_desktop.forEach((circle_desktop, idx) => {
        if (idx < currentActive_desktop) {
            circle_desktop.classList.add("active");

        } else {
            circle_desktop.classList.remove("active");
        }
    })
}
</script>





