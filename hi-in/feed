function checkEmpty(a){
    let ImageSrc= a.getAttribute('src');
          if(ImageSrc===""){
          
            countEmpty++;
              return true;
          } else {
              return false;
          }
      }
      console.log(countEmpty);

next_desktop.addEventListener("click", () => {
    currentActive_desktop++;
    arrayIndex_desktop++;
   


    if ( countEmpty===1 ){
      
        if (currentActive_desktop === circle_desktops_desktop.length) {
        currentActive_desktop = 1;
        arrayIndex_desktop = 0;
     
        }
      
    } else if( countEmpty===2 ) {
     
     if (currentActive_desktop  === (circle_desktops_desktop.length -1)) {
     currentActive_desktop = 1;
     arrayIndex_desktop = 0;
     }
     } else {
     
